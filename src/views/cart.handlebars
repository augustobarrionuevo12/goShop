<div class="cart-container">
    <h2>Carrito de Compras</h2>
    <table class="cart-table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Subtotal</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            {{#each cart.products}} <!-- CambiÃ© a cart.products en vez de cart.items -->
                <tr>
                    <td>{{this.product.title}}</td>
                    <td>{{this.quantity}}</td>
                    <td>${{this.product.price.toFixed(2)}}</td>
                    <td>${{calculateTotal this.product.price this.quantity}}</td>
                    <td>
                        <button class="remove-item-btn" data-product-id="{{this.product._id}}">Eliminar</button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="cart-total">
        <h3>Total: ${{totalPrice}}</h3>
    </div>
    <button class="checkout-btn">Proceder al Pago</button>
</div>
